[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
  interactive = auto
[user]
  name = Filippo Liverani
  email = filippo-liverani@users.noreply.github.com
[core]
  editor = vim
[alias]
  st = status
  ci = commit
  br = branch
  pl = pull
  ps = push
  co = checkout
  df = diff --word-diff --color-words
  dc = diff --word-diff --color-words --cached
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --decorate=full --all
  who = shortlog -s -s-
  aa = add -A
  us = reset
  uc = reset --soft HEAD^
  tu = stash -u
  ctags = !.git/hooks/ctags
[push]
  default = upstream
[merge]
  tool = vimdiff
  ff = only
[diff]
  tool = vimdiff
[pull]
  rebase = true
[fetch]
  prune = true
[init]
	templatedir = ~/.git_template
